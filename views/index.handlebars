<div class="container">
	<div class="row">
		
		<div class="col s12" id="top-bar">
			<img src="./assets/img/giphy.gif" alt="burger" /> <br>
		</div>
		<div class="col s12">
			<h1> Eat-Dat-Burger! </h1>
		</div>
		<br>
		<br>

		
			<div class="col s6">
			<div class="col s10" class="task">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col s11">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col s1">
					<form method="POST" action="/{{this.id}}?_method=PUT" class="button-size">
						<input type="hidden" type="text" name="devoured" value="true"><br>
					   	  <button type="submit" class="btn lime accent-4 waves-effect waves-dark">Devour me!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		
		<div class="col s6" class="task">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
			
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col s12 text-center enter_section">
			<form action="/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text" required/> <br>
				<button type="submit" class="btn lime accent-4 waves-effect waves-dark" id="text-enter-button">Submit<i class="material-icons right">local_dining</i></button>
			</form>
			<p>Add burger you want to eat <br> Click on "Submit"</p>
		</div>
	</div>
</div>
